<div class="book">
  <div class="page">
    <div class="subpage">
      <img src="/b/drk-heidelberg.png" alt="Hier sollte ein DRK-Logo zu sehen sein" width="250" align="right">
      <div style="display:block; height: 1cm; clear:both"></div>
      <h2 align="center">ONLINE DEUTSCH ERSTORIENTIERUNGSKURSE</h2>
      <h2 align="center">ONLINE GERMAN FIRST ORIENTATION CLASSES</h2>
      <h2 align="center">ONLINE ALLEMAND COURS DE PREMIERE ORIENTATION</h2>
      <h2 align="center">دورة توجيهيه اولى في اللغة الالمانية</h2>

      <span style="display:block; height: 1cm;"></span>

      <!-- Course/room name -->
      <div class="column" style="margin-left: 1cm">
        <h2><%= @room.name %></h2>
      </div>

      <!-- Input field which displays link, the value is read as the source for the QR code -->
      <input id="text" type="text" value="<%= request.base_url + @room.invite_path %>" style="width:100%" /><br />

      <!-- Element which is the target to paint the QR code -->
      <table>
        <tr>
        <td id="qrcode" style="width:200px; height:200px; padding: 20px"></td>
        <td style="white-space: pre-line; font-size:150%">
          <%= @room.description %>
        </td>
        </tr>
      </table>

      <span style="display:block; height: 1cm;"></span>

      <img src="/b/BMIBHFoerder_Logo.png" alt="Hier sollte Bundesministeriumslogo zu sehen sein." width="200" align="left">

      <!-- script call to QR code generator library -->
      <script type="text/javascript">
        var qrcode = new QRCode(document.getElementById("qrcode"), {
          width : 200,
          height : 200
        });

        function makeCode () {
          var elText = document.getElementById("text");
          qrcode.makeCode(elText.value);
        }

        makeCode();
      </script>
    </div>
  </div>
</div>
