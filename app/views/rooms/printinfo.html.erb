<div class="book">
  <div class="page">
    <div class="subpage">
      <img src="/drk-heidelberg.png" alt="Hier sollte ein DRK-Logo zu sehen sein" width="250" align="right">
      <div style="display:block; height: 1cm; clear:both"></div>
      <h2 align="center">ONLINE DEUTSCH ERSTORIENTIERUNGSKURSE</h2>
      <h2 align="center">ONLINE GERMAN FIRST ORIENTATION CLASSES</h2>
      <h2 align="center">ONLINE ALLEMAND COURS DE PREMIERE ORIENTATION</h2>
      <h2 align="center">دورة توجيهيه اولى في اللغة الالمانية</h2>

      <span style="display:block; height: 1cm;"></span>

      <div class="column" style="margin-left: 1cm">
        <h2><%= @room.name %></h2>
      </div>

      <span style="display:block; height: 1cm;"></span>

      <div class="row">
        <div class="column" >
          <i class="fas fa-chalkboard-teacher fa-10x" style="margin-left: 1cm;margin-right: 1cm"></i>
        </div>
        <div class="column" style="white-space: pre-line;">
          <%= @room.description %>
        </div>
       </div>

      <span style="display:block; height: 2cm;"></span>

      <input id="text" type="text" value="<%= request.base_url + @room.invite_path %>" style="width:100%" /><br />

      <div class="row">
        <div id="qrcode" style="width:500px; height:500px; margin-top:20px; margin-left:auto; margin-right: auto"></div>
      </div>

      <script type="text/javascript">
        var qrcode = new QRCode(document.getElementById("qrcode"), {
          width : 300,
          height : 300
        });

        function makeCode () {
          var elText = document.getElementById("text");
          qrcode.makeCode(elText.value);
        }

        makeCode();
      </script>
    </div>
  </div>
</div>
